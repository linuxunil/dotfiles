# Mako notification daemon configuration
# Generated by Ansible for {{ ansible_hostname }}

# Position and layout
layer=overlay
anchor=top-right
width=300
height=110
margin=10
padding=15
border-size=2
border-radius=8

# Default timeout in milliseconds
default-timeout=5000
ignore-timeout=1

# Maximum number of visible notifications
max-visible=5

# Font configuration
font={{ gui_font_family | default('Inter') }} {{ gui_font_size | default('11') }}

# Catppuccin Macchiato color scheme
background-color=#24273a
text-color=#cad3f5
border-color=#8aadf4
progress-color=#a6da95

# Urgency levels
[urgency=low]
border-color=#8bd5ca
default-timeout=3000

[urgency=normal]
border-color=#8aadf4
default-timeout=5000

[urgency=critical]
border-color=#ed8796
default-timeout=0

# Action button styling
[actionable]
border-color=#f5a97f

# Group notifications by application
group-by=app-name
max-history=20

# Icons
icons=1
max-icon-size=48
icon-path=/usr/share/icons/Papirus-Dark

# Format
format=<b>%s</b>\n%b
markup=1

# Actions
actions=1