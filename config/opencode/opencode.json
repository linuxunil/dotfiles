{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "model": "anthropic/claude-sonnet-4-20250514",
  "autoupdate": true,
  "share": "manual",

  "instructions": [
    "AGENTS.md",
    "CLAUDE.md"
  ],

  "provider": {
    "anthropic": {
      "models": {
        "anthropic/claude-sonnet-4-20250514": {}
      },
      "options": {
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      }
    }
  },

  "disabled_providers": [
    "openai",
    "groq"
  ],

  "mcp": {
    "godoc": {
      "type": "local",
      "command": ["/Users/disco/.local/share/mise/installs/go/1.24.5/bin/godoc-mcp"],
      "enabled": true,
      "environment": {
      }
    },
    "zig-docs": {
      "type": "local",
      "command": ["bunx", "-y", "zig-mcp@latest", "--version", "master", "--update-policy", "manual"],
      "enabled": true,
      "environment": {
      }
    }
  },

  "keybinds": {
